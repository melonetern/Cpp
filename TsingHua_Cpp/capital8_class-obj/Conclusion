ยง define class
class Student
{
  public:
    void f1(){...}
    void display();   //declare inside, define outside
  private:
    int num;
    string name;
    char gender;
};

void Student::display()     //define function out of class
  {cout<<"num:"<<num<<endl;
   cout<<"name:"<<name<<endl;
   cout<<"gender:"<<gender<<endl;
  }
  
Student stud1,stud2;



//-------------reference----------------------------------
class Time
{
  public:
  int hour;
  int minute;
};
Time t,*p;
p=&t;
cout<< p->hour;    // (*p).hour  // t.hour

Time t1;
Time &t2 = t1;
cout<< t2.hour   // t1.hour ,t2 is just a reference, they have the same thing in flash memory


int main()
{
void set_time(Time&);
void show_time(Time&);
Time t1;
set_time(t1);
show_time(t1);
Time t2;
set_time(t2);
show_time(t2);
return 0;
}
void set_time(Time&)
{	cin>> t.hour>>t.minute>>t.sec;
}
void show_time(Time&)
{		cout<< t.hour<<':'<<t.minute<<':'<<t.sec<<endl;
}
//---------------------------------------------


//---------basic classic class--------------------
#include <iostream>
using namespace std;
class Time
  {public:
    void set_time();
    void show_time();
   private:
    int hour;
    int minute;
    int sec;
  };
  
int main()
{
  Time t1;
  t1.set_time();
  t1.show_time();
  Time t2;
  t2.set_time();
  t2.show_time();
  return 0;
}

void Time::set_time()
{		cin>> hour>>minute>>sec;
}
void Time::show_time()
{		cout<<hour<<':'<<minute<<':'<<sec<<endl;
}
